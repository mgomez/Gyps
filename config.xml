    <gap:plugin name="org.apache.cordova.globalization" />
    <plugin name="phonegap-plugin-push" spec="1.5.3" source="npm">
        <param name="SENDER_ID" value="586922758992" />
    </plugin>-->
    <icon src="icon.png" />
